# Falconer Environment Configuration
# Copy this file to .env and fill in your actual values

# Environment
ENV=dev

# Bitcoin Knots Configuration
BITCOIND_SCHEME=http
BITCOIND_HOST_LOCAL=127.0.0.1
BITCOIND_HOST_IP=127.0.0.1
BITCOIND_PORT=8332
BITCOIND_RPC_USER=bitcoin
BITCOIND_RPC_PASS=your_rpc_password_here

# Electrs Configuration
ELECTRS_SCHEME=http
ELECTRS_HOST_LOCAL=127.0.0.1
ELECTRS_HOST_IP=127.0.0.1
ELECTRS_PORT=50001

# LNbits Configuration
LNBITS_SCHEME=http
LNBITS_HOST_LOCAL=127.0.0.1
LNBITS_HOST_IP=127.0.0.1
LNBITS_PORT=5000
LNBITS_API_KEY=your_lnbits_api_key_here
LNBITS_WALLET_ID=your_lnbits_wallet_id_here

# Policy Configuration
POLICY_PATH=policy/dev.policy.json

# Spending Limits (can be overridden by policy file)
MAX_DAILY_SPEND_SATS=100000
MAX_SINGLE_TX_SATS=50000
ALLOWED_DESTINATIONS=bc1qexample1,bc1qexample2

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=

# Mempool Configuration (for mempool adapter)
MEMPOOL_MODE=auto
MEMPOOL_LAN_SCHEME=http
MEMPOOL_LAN_HOST_LOCAL=
MEMPOOL_LAN_PORT=
MEMPOOL_TOR_URL=
TOR_SOCKS_URL=

# Wallet Configuration
CHANGE_ADDRESS=

# Ollama AI Configuration
OLLAMA_MODEL=llama3.1:8b
OLLAMA_HOST=http://localhost:11434

# Funding Proposal Configuration
FUNDING_PROPOSAL_ENABLED=false
FUNDING_PROPOSAL_THRESHOLD_SATS=50000
FUNDING_PROPOSAL_MAX_PENDING=3
FUNDING_PROPOSAL_DEFAULT_AMOUNT_SATS=100000
FUNDING_PROPOSAL_EXPIRY_HOURS=24

# n8n Integration Configuration (for human-in-the-loop funding approval)
N8N_WEBHOOK_URL=
N8N_WEBHOOK_SECRET=
